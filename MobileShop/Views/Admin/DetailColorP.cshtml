
@{
    ViewBag.Title = "DetailColorP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>DetailColorP</h2>
<div class="row">
    <div class="col-sm-offset-2 col-sm-8">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr class="success">
                        <th class="col-sm-3">Tên</th>
                        <th class="col-sm-3">Ảnh</th>
                        <th class="col-sm-3">Giá</th>
                        <th class="col-sm-1"></th>
                        <th class="col-sm-2 text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>@item.ColorName</td>
                            <td><img src="~/images/products/@item.ImageColor" width="90" /></td>
                            <td>@String.Format("{0:0,0}", @item.Price) VNĐ</td>
                            <td><a href="@Url.Action("EditProductColor","Admin",new { cid = item.ColorId, pid =item.ProductId})"><i class="fas fa-edit"></i></a></td>
                            <td class="text-center">
                                <a href="@Url.Action("RemoveProductColor","Admin", new { cid = item.ColorId, pid = ViewData["ProductID"]})" onclick="return confirm('Bạn có muốn xóa @item.ColorName không?');">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>
                            <a href="@Url.Action("CreateProductColor","Admin", new { id = ViewData["ProductID"]})">Thêm mới <i class="fas fa-plus-square"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        @Html.ActionLink("Quay lại","ProductControl")
    </div>
</div>
