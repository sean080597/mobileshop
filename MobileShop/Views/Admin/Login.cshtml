
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="/Content/StyleLogin.css" rel="stylesheet" />
    <script src="/Scripts/jquery.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <h3 class="text-primary text-center" style="margin-top:80px;">ĐĂNG NHẬP HỆ THỐNG QUẢN TRỊ</h3>
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="account-wall">
                    <img class="profile-img" src="/images/home/photo.png" alt="">
                    @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "form-signin" }))
                    {
                        @Html.ValidationSummary(true)
                        <input type="text" class="form-control" name="username" placeholder="Tài khoản" required autofocus>
                        <input type="password" class="form-control" name="password" placeholder="Password" required>
                        <font color="#F70921">@ViewBag.Error</font>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            Đăng Nhập
                        </button>
                        <label class="checkbox pull-left">
                            <input type="checkbox" value="remember-me">
                            Remember me
                        </label>
                        <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                    }
                </div>
                <a href="#" class="text-center new-account">Quên mật khẩu</a>
            </div>
        </div>
    </div>
    <link href="/Content/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="/Scripts/jquery-1.10.2.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
</body>
</html>
